    $tempUrlArray = [];
    foreach ($onlineURLs as $url) {
      if (!empty($url['embed']) && $url['embed'] == 'audio') {
        $audioUrls[] = $url;
      } else {
        $tempUrlArray[] = $url;
      }
    }
