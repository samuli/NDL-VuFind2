<?php
/* We need to find out if we're supposed to display an OpenURL link ($openUrlActive),
   but even if we don't plan to display the link, we still want to get the $openUrl
   value for use in generating a COinS (Z3988) tag -- see bottom of file.
*/
$openUrl = $this->openUrl($this->driver, 'results');
$openUrlActive = $openUrl->isActive();
// Account for replace_other_urls setting
$urls = $this->record($this->driver)->getLinkDetails($openUrlActive);
?>

<div class="grid-result<?=$this->driver->supportsAjaxStatus()?' ajaxItem':''?>">
  <input type="hidden" value="<?=$this->escapeHtmlAttr($this->driver->getUniqueID())?>" class="hiddenId" />
  <div class="grid-body">
    <?php if (!isset($this->hideCartControls) && $this->cart()->isActive()): ?>
      <?=$this->record($this->driver)->getCheckbox('', 'search-cart-form') ?><br/>
    <?php endif; ?>
    <div class="text-center grid-image">
      <?php if ($this->params->getView() === 'grid'): ?>
        <?=$this->render('list/list-notes.phtml')?>
      <?php endif ?>
      <?php $img = $this->recordImage($this->record($this->driver))?>
      <?=$img->render('list grid', ['small' => ['w' => 100, 'h' => 100], 'medium' => ['w' => 600, 'h' => 600]]) ?>
    </div>
    <?php if (!$openUrlActive && empty($urls)): ?>
      <?php if ($this->driver->supportsAjaxStatus()): ?>
        <div class="status ajax-availability hidden text-center"><span class="label label-default"><?=$this->transEsc('Loading')?>...</span></div>
      <?php endif; ?>
    <?php endif; ?>
    <div class="text-center grid-title">
      <h2 class="title">
        <a class="title" href="<?=$this->recordLink()->getUrl($this->driver)?>" title="<?=$this->escapeHtmlAttr($this->driver->getTitle())?>">
          <?= $this->record($this->driver)->getTitleHtml(50); ?><span class="sr-only"> <?=$this->transEsc('To the record')?></span>
        </a>
      </h2>
      <div class="dateyeartype">
        <?php $summAuthor = $this->driver->getPrimaryAuthor();
        if (!empty($summAuthor)): ?>
          <?php $authorForSearch = $this->driver->tryMethod('getPrimaryAuthorForSearch'); ?>
          <div class="truncate-field" data-rows="1">
            <p><?=$this->escapeHtml($summAuthor) ?></p>
          </div>
        <?php else: ?>
          <?php $authors = $this->driver->tryMethod('getNonPresenterAuthors');
          if (!empty($authors)): ?>
            <div class="truncate-field" data-rows="1">
              <p>
              <?php foreach ($authors as $i => $author): ?>
              <?=$i > 0 ? ' ; ' : '' ?>
                <?=$this->escapeHtml($author['name']) ?><?php if (!empty($author['role'])): ?>, <?=$this->escapeHtml($author['role']) ?><?php endif; ?>
              <?php endforeach; ?>
              </p>
            </div>
          <?php endif; ?>
        <?php endif; ?>

        <?php $journalTitle = $this->driver->getContainerTitle(); $summDate = $this->driver->getPublicationDates(); ?>
        <?php if (!empty($journalTitle)): ?>
          <?=!empty($summAuthor) ? '' : ' '?>
          <?php
          $parentSource = $this->driver->getSourceIdentifier();
          $parentId = $this->driver->tryMethod('getHierarchyParentId');
          $parentLink = false;
          if ($parentId) {
            try {
              $parentLink = $this->recordLink()->getUrl("$parentSource|{$parentId[0]}");
            } catch (Exception $e) {
              // Probably parent record doesn't exist, fall back to linking by title
            }
          }
          if ($parentLink === false) {
            $parentLink = $this->record($this->driver)->getLink('journaltitle', str_replace(['{{{{START_HILITE}}}}', '{{{{END_HILITE}}}}'], '', $journalTitle));
          }
          ?>
          <?php $ref = $this->driver->getContainerReference();
          if (!empty($ref)): ?>
            <?=$this->escapeHtml($ref); ?>
          <?php else: ?>
            <?=!empty($summDate) ? ' (' . $this->escapeHtml($summDate[0]) . ')' : ''?>
          <?php endif; ?>
        <?php elseif (!empty($summDate)): ?>
          <?=!empty($summAuthor) ? '' : ' '?>
          <span class="publish-year"><?=$this->escapeHtml($summDate[0])?></span>
        <?php endif; ?>

        <?php $dates = $this->driver->tryMethod('getResultDateRange', []);?>
        <?php if ($dates): ?>
          <?=$this->escapeHtml($dates[0]);?><?php if (isset($dates[1]) && $dates[1] != $dates[0]): ?>&ndash;<?=$this->escapeHtml($dates[1])?><?php endif; ?>
        <?php endif; ?>
      </div>
      <?php if ($this->userlist()->getMode() !== 'disabled'): ?>
        <?php /* Add to favorites */ ?>
        <div class="save-record-container">
          <a href="<?=$this->recordLink()->getActionUrl($this->driver, 'Save')?>" class="save-record" data-lightbox data-id="<?=$this->escapeHtmlAttr($this->driver->getUniqueId()) ?>" title="<?=$this->transEsc('Add to favorites')?>" rel="nofollow"><i class="fa fa-heart"></i> <?=$this->transEsc('Add to favorites')?></a>
        </div>
      <?php endif; ?>
      <?php if ($this->layout()->templateDir === 'list' && $this->params->getView() !== 'grid'): ?>
        <?=$this->render('list/list-notes.phtml')?>
      <?php endif; ?>
    </div>
  </div>
</div>

<?=$this->driver->supportsCoinsOpenUrl()?'<span class="Z3988" title="' . $this->escapeHtmlAttr($this->driver->getCoinsOpenUrl()) . '"></span>':''?>
