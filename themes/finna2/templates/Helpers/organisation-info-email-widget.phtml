      <li><b><?=$this->escapeHtml($email['name'])?></b></li>
    <?php endif ?>
    <li><a href="mailto:<?=$this->escapeHtmlAttr($email['email'])?>"><?=$this->escapeHtml($email['email'])?></a></li>
  <?php endforeach ?>
