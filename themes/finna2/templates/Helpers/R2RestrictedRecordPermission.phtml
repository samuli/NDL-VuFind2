  <div class="authorization-notification alert alert-danger" role="alert"><?= $this->translate('R2_accessrights_blocklisted_html', ['%%name%%' => $this->name, '%%url%%' => $this->url('feedback-home'), '%%date_added%%' => $this->blocklistedDate]) ?></div>
<?php elseif ($this->registered): ?>
  <div class="r2-restricted-record-register">
    <?php if ($this->note): ?>
      <div><?= $this->translate($this->note) ?></div>
    <?php endif ?>
    <div class="register">
      <div class="register-btn"><a href="<?= $this->url('myresearch-r2accessrights') ?>" class="btn btn-primary btn-r2-register"><i class="fa fa-research"></i> <?=$this->transEsc($this->registerLabel)?></a></div>
