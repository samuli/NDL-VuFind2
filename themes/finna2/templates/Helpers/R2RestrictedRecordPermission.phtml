<?php if ($this->weakLogin): ?>
  <div class="r2-restricted-record-register alert alert-danger" role="alert">
    <p><strong><?= $this->translate('R2_register_weak_loginmethod') ?></strong></p>
  </div>
<?php elseif (!$this->user && $this->id): ?>
  <?php
    // Register prompt on record page
    $script = '$(document).ready(function() { finna.R2.initModal(); });';
    $this->headScript()->appendScript($script);
    // Explicitly redirect Collection page login to Record controller
    $registerFormUrl = $this->url('r2record', ['id' => $this->id])
      . '?login=true'
      . '&recordId=' . $this->escapeHtmlAttr($this->id)
      . ($this->collection ? '&collection=1' : '');
  ?>
  <?= $this->partial('Helpers/R2RestrictedRecordPrompt.phtml', compact('registerFormUrl', 'showInfo', 'note', 'warning', 'registerLabel', 'instructions')) ?>
<?php elseif ($this->blocklisted): ?>
  <div class="authorization-notification alert alert-danger" role="alert"><?= $this->translate('R2_accessrights_blocklisted_html', ['%%name%%' => $this->name, '%%url%%' => $this->url('feedback-home'), '%%date_added%%' => $this->blocklistedDate]) ?></div>
<?php else: ?>
   <?php
     // Register prompt outside record page.
     $registerFormUrl = $this->url('r2feedback-form', ['id' => 'R2Register']);
   ?>
   <?= $this->partial('Helpers/R2RestrictedRecordPrompt.phtml', compact('registerFormUrl', 'showInfo', 'note', 'warning', 'registerLabel', 'instructions')) ?>
<?php endif; ?>
