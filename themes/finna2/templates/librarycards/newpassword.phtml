$js = <<<JS
  if ($.isReady) {
    $('#newPasswordForm').validator();
  } else {
    $(document).ready(function(){
      $('#newPasswordForm').validator();
    });
  }
JS;

echo $this->inlineScript()->appendScript($js);
?>

