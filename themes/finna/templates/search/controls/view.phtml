      <? endif; ?>
      <span class="hidden-xs hidden-sm"><?=$this->transEsc($viewData['desc']) ?></span><i class="fa fa-<?=$viewType ?>"<? if($viewData['selected']): ?> title="<?=$this->transEsc($viewData['desc']) ?> <?=$this->transEsc('view already selected') ?>" <? endif ?>></i>
      <? if (!$viewData['selected']): ?></a><? endif; ?>&nbsp;
    <? endforeach; ?>
  <? endif; ?>
</div>
